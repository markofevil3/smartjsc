doctype 5
html
  head
    title= title
    link(rel="stylesheet/less", type="text/css", href="css/admin.less")
    script(src="javascripts/less-1.3.0.min.js", type="text/javascript")
    script(src="javascripts/jquery.js", type="text/javascript")
    script(src="javascripts/button.js", type="text/javascript")
    script(src="javascripts/haml.js", type="text/javascript")
    script(src="javascripts/helpers.js", type="text/javascript")
  body
    div(id="header")
      div(id="header-title") Content Management System
    - if (login != 'true')
      div(id="main-panel")
        div(id="left-panel")
          div(class="left-menu #{productsActive}", id="menu-products")
            a(href="manageProducts?page=display&startIndex=0") Sản Phẩm
          div(class="left-menu #{servicesActive}", id="menu-services")
            a(href="#") Dịch Vụ
        div(id="right-panel")
          block content
        div(class="clear")
    script(src="javascripts/admin.js", type="text/javascript")