doctype 5
html
  head
    title= title
    link(rel="stylesheet/less", type="text/css", href="css/admin.less")
    script(src="javascripts/less-1.3.0.min.js", type="text/javascript")
    script(src="javascripts/jquery.js", type="text/javascript")
    script(src="javascripts/admin.js", type="text/javascript")
    
  body
    div(id="content")
      div(id="loginPanel")
        form(action="manage", method="POST")
          div(class="panelInput") Username:
            input(type="text", id="username", name="username", class="inputBox", required="required")
            div(class="clear")
          div(class="panelInput") Password:
            input(type="password", id="password", name="password", class="inputBox", required="required")
            div(class="clear")
          div(id="buttons")
            - if (error == 'true')
              span(id="error") wrong password!
            input(type="submit", id="loginButton", name="loginButton", class="submitButton", value="Login")
            div(class="clear")